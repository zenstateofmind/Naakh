<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".UI.Profile.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/content_profile"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint=""
        android:id="@+id/translator_name"
        android:textSize="30dp"
        android:paddingBottom="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Languages:"
        android:id="@+id/languages_caption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint=""
        android:id="@+id/languages" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money Earned:"
        android:id="@+id/money_earned_caption"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint=""
        android:id="@+id/money_earned" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Words Translated:"
        android:id="@+id/words_translated_caption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_weight="2"
        android:layout_height="0dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint=""
        android:id="@+id/words_translated" />

</LinearLayout>
