<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Profile.ProfileFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:showIn="@layout/content_profile">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome "
        android:id="@+id/translator_welcome"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="name"
        android:id="@+id/translator_name"
        android:layout_alignBottom="@+id/translator_welcome"
        android:layout_toRightOf="@+id/translator_welcome"
        android:layout_toEndOf="@+id/translator_welcome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="!"
        android:id="@+id/exclamation"
        android:layout_alignTop="@+id/translator_name"
        android:layout_toRightOf="@+id/translator_name"
        android:layout_toEndOf="@+id/translator_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Languages"
        android:id="@+id/languages_caption"
        android:layout_below="@+id/translator_welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Hindi, Malyalam, Kannada"
        android:id="@+id/languages"
        android:layout_alignTop="@+id/languages_caption"
        android:layout_toEndOf="@+id/translator_name"
        android:layout_toRightOf="@+id/translator_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Money Earned"
        android:id="@+id/money_earned_caption"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/languages_caption"
        android:layout_alignEnd="@+id/languages_caption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Moolah"
        android:id="@+id/money_earned"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/languages"
        android:layout_alignStart="@+id/languages" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Words Translated"
        android:id="@+id/words_translated_caption"
        android:layout_below="@+id/money_earned_caption"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="81dp"
        android:layout_alignRight="@+id/money_earned_caption"
        android:layout_alignEnd="@+id/money_earned_caption" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Words Translated"
        android:id="@+id/words_translated"
        android:layout_alignBottom="@+id/words_translated_caption"
        android:layout_alignLeft="@+id/languages"
        android:layout_alignStart="@+id/languages" />
</RelativeLayout>
